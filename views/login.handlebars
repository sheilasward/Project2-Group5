<div class="container row col-md-12">
    <div class="col-md-3 my-auto border border-dark sidebar sidebar-left">

    </div>
    <div class="col-md-6 border border-dark main-body">
        <div class="row">
            <div class="col-md-10 mx-auto text-center">
                <a href="/"<span class="mx-auto"><img class="mx-auto" src="/imgs/BootcampU.png"></span></a>
                {{!-- <h1 class="col-md mx-auto text-center main-head rounded">Bootcamp University</h1> --}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 mx-auto border border-dark rounded login-container">
                <div class="col-md-10 mx-auto text-center rounded login-head">Login Form</div>
                <div class="row mx-auto">
                    <form class="mx-auto login-form login">
                        <div class="form-group text-center m-0">
                            <label for="email-input m-0">Email address</label>
                            <input type="email" class="form-control" id="email-input" placeholder="Enter email">
                        </div>
                        <div class="form-group text-center m-0">
                            <label for="password-input m-0">Password</label>
                            <input type="password" class="form-control" id="password-input" placeholder="Password">
                        </div>
                        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span> <span class="msg"></span>
                        </div>
                        <div class="mx-auto text-center">
                            <button type="submit" class="btn btn-primary login-btn">Login</button>
                        </div>
                        <p class="text-center">Or sign up <a href="/">here</a></p>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-3 my-auto border border-dark sidebar sidebar-left">

    </div>
</div>
